<html>
 <body>

  <h1> Welcome to RetFlix! See our collection of movies below.  </h1>
  <% for movies in @movies %>
  <!-- <h3><%= movies.title %></h3> -->
  <%end%>
  
  <table>
    <thead>
      <tr>
        <th>Title</th>
        <th>Description</th>
        <th>Year Released</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% @movies.each do |movie| %>
        <tr>
          <td><%= movie.title %></td>
          <td><%= movie.description %></td>
          <td><%= movie.year_released %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  
  </body>
</html>


 